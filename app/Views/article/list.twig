{% extends "layout/base.html.twig"%}

{% block title %}Marché{% endblock %}

{% block body %}

<div>
    <h1 class="text-uppercase text-center mt-5 h1">Le marché</h1>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div>
                    <!--end of col-->
                    <div class="col">
                        <label for="search" hidden>rechercher</label>
                        <input class="form-control form-control-lg form-control-borderless" type="search" id="search"
                            placeholder="Rechercher un article">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-lg btn-warning" type="submit">Rechercher</button>
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
</div>

<div class="section recipes mt-5 pl-5 pr-5">
    <div class="container-fluid">
        <div class="row flex-row-stretch">
            {% for a in articles %}
            <div class="col-sm-6 col-md-4 col-lg-3 flex-col">
                <div class="card">
                    {% if a.idImage is empty %}
                    <div class="card-photo">
                        <img src="{{base_url(" /assets/img/default-image.jpg")}}" alt="{{ a.getProduct().name }}">
                    </div>
                    {% else %}
                    <div class="card-photo">
                        <img src="{{base_url(" /assets/img/" ~ a.getImage().name ~"."~ a.getImage().fileExtension)}}"
                            alt="{{ a.getProduct().name }}">
                    </div>
                    {% endif %}
                    <div class="card-body pt-3 bg-secondary">
                        <h2 class="text-center text-uppercase"><a class="link" href={{base_url('oneArticle')~'/'~
                            a.idArticle}}>{{a.getProduct().name}}</a></h2>
                        <div class="mt-3">
                            <p class="text-white ml-2">Prix article : {{a.getPrice().price}} € </p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}