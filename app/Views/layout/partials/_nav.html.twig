{% block body %}

<div class="container-fluid">

  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#efb283;">
    <img class="logo ml-2" src="{{base_url(" /assets/img/logo.svg")}}" alt="logo du site Nesti">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
      aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto w-100 d-flex justify-content-around">
        <li class="nav-item">
          <a class="nav-link btn btn-warning text-uppercase font-weight-bold{{ slug=="" ? " active" : "" }} "
             href={{base_url('')}}><i class=" fas fa-home mr-2"></i>Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn btn-warning text-uppercase font-weight-bold{{ slug==" recipes" ? " active"
            : "" }} "
             href={{base_url('recipes')}}><i class=" fas fa-clipboard-list mr-2"></i>Recettes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn btn-warning text-uppercase font-weight-bold{{ slug==" articles" ? " active"
            : "" }} "
             href={{base_url('article')}}><i class=" fas fa-utensils mr-2"></i>Marché</a>
        </li>
        <li class=" nav-item">
          <a class="nav-link btn btn-warning text-uppercase font-weight-bold{{ slug==" suggestions" ? "active"
            : "" }} "
             href={{base_url('suggestions')}}><i class=" fas fa-eye mr-2"></i>Suggestions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn btn-warning text-uppercase font-weight-bold{{ slug==" cart" ? " active" : ""
            }} "
             href={{base_url('cart')}}><i class=" fas fa-shopping-cart mr-2"></i>Panier</a>
        </li>
      </ul>

      {% if loggedInUser %}

      <span class="navbar-text text-dark text-center font-weight-bold">

        {{loggedInUser.login}}

        <a href={{base_url('deconnection')}}><i class="fas fa-sign-out-alt fa-2x mb-1"></i>Déconnexion</a></span>

      {% else %}

      <span class="navbar-text text-dark text-center font-weight-bold">
        <a href={{base_url('connection')}}><i class="fas fa-sign-in-alt fa-2x mb-1"></i>Connexion</a></span>

      {% endif %}

    </div>
  </nav>

</div>

{% endblock %}