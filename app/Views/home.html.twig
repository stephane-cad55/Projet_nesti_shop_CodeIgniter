{% extends 'layout/base.html.twig' %}

{% block body %}

<div class="title d-flex justify-content-center text-center">
    <h1 class="font-weight-bold h1 shadow p-3 rounded" style="background-color:#efb283;">Bienvenue Chez
        Nesti</h1>
</div>

<div class="d-flex justify-content-center text-center font-weight-bold mt-5">
    <h2>Vos 5 dernières recettes consultées</h2>
</div>

{% for recipe in recipes %}

<ul class="d-flex justify-content-center list-unstyled font-italic shadow rounded h3 mt-5">
    <li><a class="text-dark" href="{{base_url("recipeDetail/" ~
        recipe.idRecipe)}}">{{recipe.name}}</a></li>
</ul>

{% endfor %}

{% endblock %}